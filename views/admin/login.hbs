<div class="container">
    <div class="row">
        <div class="col">
            <form action="/admin/login" method="post">
                <div class="mb-3">
                    <input type="text" class="form-control" placeholder="Usuario" name="usuario">
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" placeholder="Contraseña" name="password">
                </div>
                <button type="submit" class="btn btn-primary">Ingresar</button>

            </form>
            {{#if error}}
            <p style="font-size: 20px; color:#da3c3c; margin-left: 270px; margin-top: 50px"><i class="fa-solid fa-triangle-exclamation" style="color: #da3c3c ;"></i> Usuario y/o contraseña incorrecta</p>
            {{/if}}
        </div>
    </div>
</div>